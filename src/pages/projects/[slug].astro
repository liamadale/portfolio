---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

type Props = {
  project: CollectionEntry<'projects'>;
};

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} - Liam Dale`}>
  <main class="max-w-4xl mx-auto px-6 md:px-12 lg:px-16 py-12">
    <!-- Header with Navigation -->
    <header class="mb-8">
      <div class="flex items-center gap-4 mb-6">
        <a 
          href="/projects/" 
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-skin-accent-bg hover:bg-skin-accent hover:text-skin-bg transition-colors duration-200 text-sm font-medium text-skin-accent"
        >
          <i class="fa-solid fa-arrow-left"></i>
          Back to Projects
        </a>
        <a 
          href="/" 
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-skin-accent-bg hover:bg-skin-accent hover:text-skin-bg transition-colors duration-200 text-sm font-medium text-skin-accent"
        >
          <i class="fa-solid fa-house"></i>
          Home
        </a>
      </div>

      <div class="flex items-start justify-between mb-6">
        <div>
          <h1 class="text-3xl font-bold text-skin-heading mb-2">
            {project.data.title}
          </h1>
          <p class="text-lg text-skin-muted max-w-2xl">
            {project.data.description}
          </p>
        </div>
        
        {project.data.status && (
          <span class="px-3 py-1 bg-skin-accent-bg text-skin-accent rounded-full text-sm font-medium">
            {project.data.status === 'in-progress' ? 'In Progress' : 
             project.data.status === 'completed' ? 'Completed' : 'Archived'}
          </span>
        )}
      </div>

      <!-- Project Meta -->
      <div class="flex flex-wrap items-center gap-6 mb-8 text-sm text-skin-muted">
        <time datetime={project.data.pubDate.toISOString()}>
          {project.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        
        <div class="flex items-center gap-4">
          <a 
            href={project.data.link} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-skin-accent hover:text-skin-accent/80 transition-colors"
          >
            <i class="fa-solid fa-external-link"></i>
            View Project
          </a>
          
          {project.data.github && (
            <a 
              href={project.data.github} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-skin-accent hover:text-skin-accent/80 transition-colors"
            >
              <i class="fa-brands fa-github"></i>
              GitHub
            </a>
          )}
        </div>
      </div>

      <!-- Technologies -->
      {project.data.tech && project.data.tech.length > 0 && (
        <div class="mb-8">
          <h3 class="text-sm font-semibold text-skin-heading mb-3">Technologies Used</h3>
          <div class="flex flex-wrap gap-2">
            {project.data.tech.map((tech: string) => (
              <span class="px-3 py-1 bg-skin-accent-bg text-skin-accent rounded-full text-sm font-medium">
                {tech}
              </span>
            ))}
          </div>
        </div>
      )}
    </header>

    <!-- Project Image -->
    {project.data.image && (
      <div class="mb-8">
        <img
          src={project.data.image}
          alt={project.data.alt ?? project.data.title}
          class="w-full rounded-lg border border-skin-muted/20"
        />
      </div>
    )}

    <!-- Project Content -->
    <article class="prose prose-skin max-w-none">
      <Content />
    </article>
  </main>
</Layout>