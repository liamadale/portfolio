---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writeups');
  return posts.map((post: { slug: string }) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'writeups'>;
};

const { post } = Astro.props as Props;
const { Content } = await post.render();

// Get all posts to determine prev/next
const allPosts = (await getCollection('writeups')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const currentIndex = allPosts.findIndex((p) => p.slug === post.slug);
const prevPost = currentIndex > 0 ? allPosts[currentIndex - 1] : null;
const nextPost = currentIndex < allPosts.length - 1 ? allPosts[currentIndex + 1] : null;
---

<Layout title={post.data.title}>
  <!-- NAVIGATION HEADER -->
  <nav class="post-nav-container">
    <div class="post-nav">
      <div class="flex gap-4">
        <a href="/" class="post-nav-bubble"><i class="fa-solid fa-house"></i></a>
        <a href="/writeups/" class="post-nav-bubble"><i class="fa-solid fa-list-ul"></i></a>
      </div>
      <div class="flex gap-4">
        {prevPost && (
          <a href={`/writeups/${prevPost.slug}/`} class="post-nav-bubble"><i class="fa-solid fa-backward"></i></a>
        )}
        {nextPost && (
          <a href={`/writeups/${nextPost.slug}/`} class="post-nav-bubble"><i class="fa-solid fa-forward"></i></a>
        )}
      </div>
    </div>
  </nav>
  <main class="blog-post-wrapper">
    <header class="post-header">
      <h1 class="blog-post-header">{post.data.title}</h1>

      <div class="post-meta">
        <time
          datetime={post.data.pubDate.toISOString()}
          class="post-meta-date"
        >
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
      </div>

      {post.data.image && (
        <img
          src={post.data.image}
          alt={post.data.alt ?? post.data.title}
          class="post-header-image"
        />
      )}
    </header>
    <article class="blog-post-content">
      <Content />
    </article>
  </main>
</Layout>