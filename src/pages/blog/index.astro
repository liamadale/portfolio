---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const POSTS_PER_PAGE = 10;

type BlogPost = CollectionEntry<'blog'>;

const allPosts: BlogPost[] = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const posts = allPosts.slice(0, POSTS_PER_PAGE);
const total = Math.ceil(allPosts.length / POSTS_PER_PAGE);
---

<Layout title="Blog - Liam Dale">
  <main class="max-w-screen-xl mx-auto px-6 md:px-12 lg:px-16 py-12">
    <!-- Header with Home Button -->
    <header class="mb-12">
      <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold mb-4">
          Blog Posts
        </h1>
        <a 
          href="/" 
          class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-skin-accent-bg hover:bg-skin-accent hover:text-skin-bg transition-colors duration-200 text-sm font-medium text-skin-accent"
        >
          <i class="fa-solid fa-house"></i>
          Home
        </a>
      </div>
      <p class="text-lg text-skin-muted max-w-2xl">
        Thoughts on cybersecurity, technical tutorials, and insights from my journey in information security.
      </p>
    </header>

    <!-- Posts Grid -->
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post: BlogPost) => (
        <article class="group bg-skin-bg rounded-xl border border-skin-muted/20 overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1 hover:border-skin-accent/50">
          {post.data.image && (
            <div class="aspect-video overflow-hidden">
              <img
                src={post.data.image}
                alt={post.data.alt ?? post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
          )}
          
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-3 text-skin-heading group-hover:text-skin-accent transition-colors">
              <a href={`/blog/${post.slug}/`} class="stretched-link">
                {post.data.title}
              </a>
            </h2>
            
            {post.data.description && (
              <p class="text-skin-muted mb-4 line-clamp-3">
                {post.data.description}
              </p>
            )}
            
            <div class="flex items-center justify-between text-sm text-skin-muted">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
              
              {post.data.category && (
                <span class="px-2 py-1 bg-skin-accent-bg text-skin-accent rounded-full text-xs font-medium">
                  {post.data.category}
                </span>
              )}
            </div>
            
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mt-4">
                {post.data.tags.slice(0, 3).map((tag: string) => (
                  <span class="px-2 py-1 bg-skin-accent-bg text-skin-text rounded text-xs">
                    #{tag}
                  </span>
                ))}
                {post.data.tags.length > 3 && (
                  <span class="px-2 py-1 bg-skin-accent-bg text-skin-muted rounded text-xs">
                    +{post.data.tags.length - 3} more
                  </span>
                )}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>

    {posts.length === 0 && (
      <div class="text-center py-12">
        <i class="fa-solid fa-file-lines text-6xl text-skin-muted mb-4"></i>
        <h3 class="text-xl font-semibold text-skin-heading mb-2">No blog posts yet</h3>
        <p class="text-skin-muted">Check back soon for new content!</p>
      </div>
    )}

    {total > 1 && (
      <nav class="mt-12 flex justify-center">
        <a 
          href="/blog/page/2/" 
          class="inline-flex items-center gap-2 px-6 py-3 bg-skin-accent hover:bg-skin-accent/80 text-skin-bg rounded-lg font-medium transition-colors duration-200"
        >
          Load More Posts
          <i class="fa-solid fa-arrow-right"></i>
        </a>
      </nav>
    )}
  </main>
</Layout>
